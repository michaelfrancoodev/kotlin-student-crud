<?xml version="1.0" encoding="utf-8"?>
<!--
    Data extraction rules for Android 12+
    Controls cloud backup and device-to-device transfer
-->
<data-extraction-rules>
    <cloud-backup>
        <!-- Include shared preferences -->
        <include domain="sharedpref" path="."/>
        
        <!-- Include database -->
        <include domain="database" path="."/>
        
        <!-- Exclude cache -->
        <exclude domain="cache" path="."/>
    </cloud-backup>
    
    <device-transfer>
        <!-- Include shared preferences -->
        <include domain="sharedpref" path="."/>
        
        <!-- Include database -->
        <include domain="database" path="."/>
        
        <!-- Exclude cache -->
        <exclude domain="cache" path="."/>
    </device-transfer>
</data-extraction-rules>
