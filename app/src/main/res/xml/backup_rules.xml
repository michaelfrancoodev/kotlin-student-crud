<?xml version="1.0" encoding="utf-8"?>
<!--
    Backup rules for Android Auto Backup
    Specifies which files should be backed up
-->
<full-backup-content>
    <!-- Include shared preferences -->
    <include domain="sharedpref" path="."/>
    
    <!-- Include database (Room) -->
    <include domain="database" path="."/>
    
    <!-- Exclude cache -->
    <exclude domain="cache" path="."/>
    
    <!-- Exclude no_backup directory -->
    <exclude domain="file" path="no_backup"/>
</full-backup-content>
